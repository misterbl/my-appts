{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "rules": {
    "ordered-imports": false,
    "no-console": false,
    "member-access": false,
    "jsx-boolean-value": false,
    "object-literal-sort-keys": false,
    "jsx-no-lambda": false,
    "only-arrow-functions": false
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "results/coverage/lcov-report/*.js",
      "results/coverage/*.js",
      "test/deploy/helpers/*.js",
      "test/*.js"
    ]
  }
}
